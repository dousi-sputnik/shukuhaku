<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <h2 class="text-start mt-4">ルーム登録情報</h2>
      <%= render 'shared/errors', obj: @room %>
      <%= form_with(model: @room, class: "shadow p-3 mb-3 bg-light rounded", local: true) do |f| %>
        <div class="row mb-3 mt-3">
          <%= f.label :room_name, "ルーム名", class: "col-2 col-form-label text-dark" %></br>
          <div class="col-10">
            <%= f.text_field :room_name, class: "form-control shadow rounded", placeholder: "ルーム名を入力" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :description, "ルーム紹介", class: "col-2 col-form-label text-dark" %></br>
          <div class="col-10">
            <%= f.text_area :description, class: "form-control shadow rounded", placeholder: "ルーム説明を入力" %>
          </div>
        </div>

        <div class="row mg-3">
          <%= f.label :fee, "料金", class: "col-2 col-form-label text-dark" %></br>
          <div class="col-10">
            <%= f.number_field :fee, class: "form-control shadow rounded", placeholder: "一日あたりの料金を入力" %>
          </div>
        </div>

        <div class="row mb-3 mt-3">
          <%= f.label :address, "住所", class: "col-2 col-form-label text-dark" %></br>
          <div class="col-10">
            <%= f.text_field :address, class: "form-control shadow rounded", placeholder: "住所を入力" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :room_image, "ルーム画像", class: "col-2 col-form-label text-dark" %><br/>
          <div class="col-10">
            <%= f.file_field :room_image %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col" id="form-col-submit">
            <%= f.submit(@room.new_record? ? "登録" : "部屋情報編集", class: "btn btn-outline-dark btn-lg") %>
          </div>
        </div>

      <% end %>
    </div>
    
  </div>
</div>