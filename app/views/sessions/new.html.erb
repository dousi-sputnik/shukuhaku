<h1 class="text-center mt-4" id="top-dis">Pote Shareにログイン</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-light rounded", local: true) do |f| %>
        <div class="row mb-3">
          <%= f.label :email, class: "col-2 col-form-label text-dark" %></br>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "メールアドレス" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :password, class: "col-2 col-form-label text-dark" %></br>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "パスワード" %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col" id="form-col-submit">
            <%= f.submit "ログイン", class: "btn btn-outline-dark btn-lg" %>
          </div>
        </div>
      <% end %>
      <div class="row mb-3">
        <div class="col" id="form-col-submit">
          <%= link_to 'トップページに戻る', root_path, class: "text-info" %>
        </div>
      </div>
    </div>
    
  </div>
</div>


