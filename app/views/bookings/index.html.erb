<div class="container-fiuld">
  <h4>予約済みルーム一覧</h4>
  <table>
    <thead>
      <tr align="center">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確定日時</th>
    </thead>
    <tbody>
      <% if @booking == nil %>
        <p>予約済みの部屋はありません</p>
      <% end %>
      <% @bookings.each do |booking| %>
        <tr class="border-top">
          <% if booking.room.room_image? %>
            <td><%= link_to image_tag(booking.room.room_image.url, size:'50x50'), booking.room %></td>
          <% else %>
            <td><%= link_to image_tag("default_room.jpg", size:'50x50'), booking.room %></td>
          <% end %>
          <td><%= link_to booking.room.room_name, booking.room %></td>
          <td><%= booking.room.description %></td>
          <td><%= booking.total_price %></td>
          <td><%= booking.start_date %></td>
          <td><%= booking.end_date %></td>
          <td><%= booking.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
