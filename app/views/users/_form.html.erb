<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-light rounded", local: true) do |f| %>
        <div class="row mb-3 mt-3">
          <%= f.label :username, "ユーザー名", class: "col-2 col-form-label text-dark" %></br>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "ユーザー名" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :email, class: "col-2 col-form-label text-dark" %></br>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "メールアドレス" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :password, "パスワード", class: "col-2 col-form-label text-dark" %></br>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "パスワード" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :password_confirmation, "パスワード確認", class: "col-2 col-form-label text-dark" %></br>
          <div class="col-10">
            <%= f.password_field :password_confirmation, class: "form-control shadow rounded", placeholder: "パスワード確認" %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col" id="form-col-submit">
            <%= f.submit(@user.new_record? ? "Sign Up!" : "Update account", class: "btn btn-outline-dark btn-lg") %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :profile_image %><br/>
          <%= f.file_field :profile_image %>
        </div>
      <% end %>
      <div class="row mb-3">
        <div class="col" id="form-col-submit">
          <%= link_to 'すでにアカウントをお持ちの方はログイン', login_path, class: "text-info" %>
        </div>
      </div>
    </div>
    
  </div>
</div>